<Window
    x:Class="UI.Features.ProjectsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Features"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:projects="clr-namespace:UI.Features.Projects"
    Title="Manage Projects"
    Width="500"
    Height="400"
    d:DataContext="{d:DesignInstance Type=projects:ProjectsWindowViewModel}"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
       
        <Grid Grid.Column="0" Margin="10,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="30px" />
                <RowDefinition Height="34px" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button
                Grid.Row="0"
                Grid.Column="4"
                Width="60"
                HorizontalAlignment="Right"
                Command="{Binding AddNewCommand}"
                Content="Add New">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3" />
                    </Style>
                </Button.Resources>
            </Button>
            <Label
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Content="Dev Apps"
                VerticalAlignment="Center" />
            <ComboBox
                Grid.Row="2"
                Grid.ColumnSpan="3"
                Margin="0,0,0,5"
                ItemsSource="{Binding DevApps}"
                DisplayMemberPath="Name"
                SelectedItem="{Binding SelectedDevApp, UpdateSourceTrigger=PropertyChanged}"
                IsEditable="True"
                IsTextSearchEnabled="True"
                StaysOpenOnEdit="True"
                PreviewTextInput="ComboBox_PreviewTextInput" />
            <Label
                Grid.Row="3"
                Grid.ColumnSpan="3"
                Content="Name" />
            <Grid Grid.Row="4" Margin="0,0,0,3">
                <Grid Grid.Column="0">
                    <TextBox
                        Padding="3,3,3,3"
                        VerticalAlignment="Center"
                        Text="{Binding Project.Name, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Grid>
            <Label
                Grid.Row="5"
                Grid.ColumnSpan="3"
                Content="Path" />
            <Grid Grid.Row="6" Margin="0,0,0,3">
                <Grid Grid.Column="0">
                    <TextBox
                        Padding="3,3,20,3"
                        VerticalAlignment="Center"
                        Text="{Binding Project.Path, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,0,2,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{Binding OpenDialogCommand}">
                        <Button.Content>
                            <Image
                                HorizontalAlignment="Right"
                                Source="/Resources/folder.png"
                                ToolTip="Select Executable File" />
                        </Button.Content>
                    </Button>
                </Grid>
            </Grid>
            <Label
                Grid.Row="7"
                Grid.ColumnSpan="3"
                Content="Project File" />
            <Grid Grid.Row="8" Margin="0,0,0,3">
                <Grid Grid.Column="0">
                    <TextBox
                        Padding="3,3,20,3"
                        VerticalAlignment="Center"
                        Text="{Binding Project.Filename, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Grid>
            <Button
                Grid.Row="9"
                Margin="0,10,0,0"
                Command="{Binding SaveCommand}"
                Content="Save">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3" />
                    </Style>
                </Button.Resources>
            </Button>
            <Label
                Grid.Row="10"
                VerticalAlignment="Bottom"
                HorizontalContentAlignment="Center"
                Background="LightGreen"
                Content="Saved!"
                Visibility="{Binding SaveNotificationVisibility}" />
        </Grid>
    </Grid>
</Window>
