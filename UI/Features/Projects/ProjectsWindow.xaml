<Window
    x:Class="UI.Features.ProjectsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Features"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:projects="clr-namespace:UI.Features.Projects"
    Title="Manage Projects"
    Width="500"
    Height="400"
    d:DataContext="{d:DesignInstance Type=projects:ProjectsWindowViewModel}"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                Grid.ColumnSpan="3"
                Content="Search" />
            <Grid Grid.Row="1" VerticalAlignment="Top">
                <TextBox
                    Padding="3,3,20,3"
                    VerticalAlignment="Center"
                    Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" />
                <Image
                    Width="16"
                    Height="16"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Right"
                    Source="/Resources/search.png" />
            </Grid>
            <Grid Grid.Row="2">
                <ListView
                    ItemsSource="{Binding Projects, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding Project, UpdateSourceTrigger=PropertyChanged}"
                    SizeChanged="ListView_SizeChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Header="Name">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                            </GridViewColumn>
                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            HorizontalAlignment="Center"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}">
                                            <Button.Content>
                                                <Image
                                                    Grid.Row="7"
                                                    Width="16"
                                                    Height="16"
                                                    Source="/Resources/trash-can-alt-1-red.png"
                                                    ToolTip="Delete" />
                                            </Button.Content>
                                        </Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Margin="10,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="30px" />
                <RowDefinition Height="34px" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button
                Grid.Row="0"
                Grid.Column="4"
                Width="60"
                HorizontalAlignment="Right"
                Command="{Binding AddNewCommand}"
                Content="Add New">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3" />
                    </Style>
                </Button.Resources>
            </Button>
            <Label
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Content="Name" />
            <Grid Grid.Row="2" Margin="0,0,0,3">
                <Grid Grid.Column="0">
                    <TextBox
                        Padding="3,3,3,3"
                        VerticalAlignment="Center"
                        Text="{Binding Project.Name, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Grid>
            <Label
                Grid.Row="3"
                Grid.ColumnSpan="3"
                Content="Path" />
            <Grid Grid.Row="4" Margin="0,0,0,3">
                <Grid Grid.Column="0">
                    <TextBox
                        Padding="3,3,20,3"
                        VerticalAlignment="Center"
                        Text="{Binding Project.Path, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,0,2,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{Binding OpenDialogCommand}">
                        <Button.Content>
                            <Image
                                HorizontalAlignment="Right"
                                Source="/Resources/folder.png"
                                ToolTip="Select Executable File" />
                        </Button.Content>
                    </Button>
                </Grid>
            </Grid>
            <Label
                Grid.Row="5"
                Grid.ColumnSpan="3"
                Content="Project File" />
            <Grid Grid.Row="6" Margin="0,0,0,3">
                <Grid Grid.Column="0">
                    <TextBox
                        Padding="3,3,20,3"
                        VerticalAlignment="Center"
                        Text="{Binding Project.Filename, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Grid>
            <Button
                Grid.Row="7"
                Margin="0,10,0,0"
                Command="{Binding SaveCommand}"
                Content="Save">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3" />
                    </Style>
                </Button.Resources>
            </Button>
            <Label
                Grid.Row="8"
                VerticalAlignment="Bottom"
                HorizontalContentAlignment="Center"
                Background="LightGreen"
                Content="Saved!"
                Visibility="{Binding SaveNotificationVisibility}" />
        </Grid>
    </Grid>
</Window>
