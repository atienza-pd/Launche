<Window
    x:Class="UI.Features.ProjectsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Features"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:projects="clr-namespace:UI.Features.Projects"
    Title="Manage Projects"
    Width="500"
    Height="350"
    d:DataContext="{d:DesignInstance Type=projects:ProjectsWindowViewModel}"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28px" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Menu
            Grid.Row="{x:Static projects:ProjectGridRow.Menu}"
            Height="26"
            Padding="6,0,0,0"
            VerticalAlignment="Center"
            Background="White">
            <MenuItem
                Padding="6,3,6,6"
                VerticalAlignment="Center"
                Command="{Binding SaveCommand}"
                Header="_Save" />
            <MenuItem
                Name="MenuItemManageProjects"
                Padding="6,3,6,6"
                Command="{Binding OpenProjectsWindowCommand}"
                Header="_Delete" />
        </Menu>
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="28px" />
                <RowDefinition Height="25px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition Height="28px" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                Grid.ColumnSpan="3"
                Content="Dev Apps" />
            <ComboBox
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Margin="5,0,5,0"
                DisplayMemberPath="Name"
                IsEditable="True"
                IsTextSearchEnabled="True"
                ItemsSource="{Binding DevApps}"
                PreviewTextInput="ComboBox_PreviewTextInput"
                SelectedItem="{Binding SelectedDevApp, UpdateSourceTrigger=PropertyChanged}"
                StaysOpenOnEdit="True" />
            <Label
                Grid.Row="2"
                Grid.ColumnSpan="3"
                Content="Name" />
            <TextBox
                Grid.Row="3"
                Margin="5,0,5,0"
                Padding="3,3,3,3"
                VerticalAlignment="Center"
                Text="{Binding Project.Name, UpdateSourceTrigger=PropertyChanged}" />

            <Label
                Grid.Row="4"
                Grid.ColumnSpan="3"
                Content="Path" />
            <Grid Grid.Row="5" Margin="5,0,5,0">
                <TextBox
                    Padding="3,3,20,3"
                    VerticalAlignment="Center"
                    Text="{Binding Project.Path, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Width="20"
                    Height="20"
                    Margin="0,0,2,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{Binding OpenDialogCommand}">
                    <Button.Content>
                        <Image
                            HorizontalAlignment="Right"
                            Source="/Resources/folder.png"
                            ToolTip="Select Executable File" />
                    </Button.Content>
                </Button>
            </Grid>
            <Label
                Grid.Row="6"
                Grid.ColumnSpan="3"
                Content="Project File" />

            <TextBox
                Grid.Row="7"
                Padding="3,3,20,3"
                Text="{Binding Project.Filename, UpdateSourceTrigger=PropertyChanged}" />

            <Label
                Grid.Row="8"
                VerticalAlignment="Bottom"
                HorizontalContentAlignment="Center"
                Background="LightGreen"
                Content="Saved!"
                Visibility="{Binding SaveNotificationVisibility}" />
        </Grid>
    </Grid>
</Window>
