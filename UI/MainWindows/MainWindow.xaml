<Window
    x:Class="UI.MainWindows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Launche - Your IDE Launcher"
    Width="650"
    Height="550"
    MaxWidth="750"
    Loaded="Window_Loaded"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid Margin="5,2,5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="26" />
            <RowDefinition Height="33" />
            <RowDefinition Height="23" />
            <RowDefinition Height="28" />
            <RowDefinition Height="28" />
            <RowDefinition Height="28" />
            <RowDefinition Height="28" />
            <RowDefinition Height="28" />
            <RowDefinition Height="28" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu Height="26" VerticalAlignment="Center">
            <MenuItem
                Padding="6,3,6,6"
                Click="MenuItem_ShowDevApps_Click"
                Header="_Manage Dev Apps" />
            <MenuItem
                Name="MenuItemManageProjects"
                Padding="6,3,6,6"
                Click="MenuItemManageProjects_Click"
                Header="_Manage Projects" />
        </Menu>
        <Grid
            Grid.Row="1"
            Height="26"
            VerticalAlignment="Center"
            Background="#404040">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Dev Apps"
                Foreground="White" />
        </Grid>
        <ComboBox
            x:Name="comboIDEPaths"
            Grid.Row="2"
            Grid.Column="0"
            Height="23"
            Margin="0,0,3,0"
            VerticalAlignment="Center"
            DisplayMemberPath="Name"
            Focusable="True"
            IsEditable="True"
            ItemsSource="{Binding IdePathsModels, UpdateSourceTrigger=PropertyChanged}"
            SelectedValue="{Binding SelectedIdePath, UpdateSourceTrigger=PropertyChanged}" />
        <Grid
            Grid.Row="3"
            Margin="0,2,0,0"
            Background="#404040">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label
                HorizontalAlignment="Left"
                Content="Project Path"
                Foreground="White" />
        </Grid>
        <Grid Grid.Row="4" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    Content="Name"
                    ForceCursor="True" />
                <TextBox
                    Grid.Column="1"
                    Height="20"
                    Margin="0,0,5,0"
                    IsReadOnly="True"
                    IsReadOnlyCaretVisible="True"
                    Text="{Binding SelectedProjectPath.Name}"
                    TextWrapping="NoWrap" />
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    Content="Path" />
                <TextBox
                    Grid.Row="1"
                    Height="20"
                    Margin="0,0,0,0"
                    IsReadOnly="True"
                    IsReadOnlyCaretVisible="True"
                    Text="{Binding SelectedProjectPath.Filename}"
                    TextWrapping="NoWrap" />
            </Grid>
            <!--<Button
                Grid.Column="3"
                Height="22"
                Margin="5,0,0,0"
                Click="btnSaveProjectPath_Click"
                Content="Save">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3" />
                    </Style>
                </Button.Resources>
            </Button>-->
        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>



        </Grid>
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                VerticalAlignment="Top"
                Content="Path:"
                ForceCursor="True" />
            <TextBox
                Grid.Column="1"
                Height="20"
                IsReadOnly="True"
                IsReadOnlyCaretVisible="True"
                Text="{Binding SelectedProjectPath.Path}"
                TextWrapping="NoWrap" />
        </Grid>

        <Label Grid.Row="7" Content="{Binding SelectedProjectPath.CurrentGitBranch}" />

        <Grid Grid.Row="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="107" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Padding="5,0"
                VerticalAlignment="Center"
                Content="Search:"
                ForceCursor="True" />
            <TextBox
                x:Name="txtSearch"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                KeyUp="txtSearch_KeyUp"
                Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}"
                TextChanged="TxtSearch_TextChanged"
                TextWrapping="NoWrap" />
        </Grid>
        <ListView
            x:Name="lvProjectPaths"
            Grid.Row="9"
            Margin="0,0,0,5"
            ItemsSource="{Binding ProjectPathModels, UpdateSourceTrigger=PropertyChanged}"
            KeyDown="lvProjectPaths_KeyDown"
            MouseDoubleClick="ProjectPathsList_MouseDoubleClick"
            SelectionChanged="ProjectPathsList_SelectionChanged">
            <ListView.Resources>
                <DataTemplate x:Key="Templ">
                    <TextBlock HorizontalAlignment="Left" Text="Name" />
                </DataTemplate>
                <DataTemplate x:Key="pathTemplate">
                    <TextBlock HorizontalAlignment="Left" Text="Path" />
                </DataTemplate>
                <DataTemplate x:Key="GroupTemplate">
                    <TextBlock HorizontalAlignment="Left" Text="Group" />
                </DataTemplate>
                <Style x:Key="HeaderStyle" TargetType="GridViewColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="Padding" Value="5,2,2,2" />
                </Style>
                <ContextMenu x:Key="ItemContextMenu">
                    <MenuItem
                        x:Name="mnuAddToGroup"
                        Click="mnuAddToGroup_Click"
                        Header="Add to Group"
                        IsEnabled="{Binding EnableAddToGroup}" />
                    <MenuItem
                        x:Name="mnuMoveUp"
                        Click="mnuMoveUp_Click"
                        Header="Move up"
                        IsEnabled="{Binding EnableMoveUp}" />
                    <MenuItem
                        x:Name="mnuMoveDown"
                        Click="mnuMoveDown_Click"
                        Header="Move down"
                        IsEnabled="{Binding EnableMoveDown}" />
                    <MenuItem
                        x:Name="MnuOpenFolderWindow"
                        Click="MnuOpenFolderWindow_Click"
                        Header="Open Folder Window" />
                </ContextMenu>
                <ToolTip x:Key="ItemToolTip">
                    <Label Content="Double click to lunch your IDE" />
                </ToolTip>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="ToolTip" Value="{StaticResource ItemToolTip}" />
                    <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView AllowsColumnReorder="true">
                    <GridView.Columns>
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding Path=Index}"
                            Header="#" />
                        <GridViewColumn
                            Width="0"
                            DisplayMemberBinding="{Binding Path=GroupName}"
                            HeaderContainerStyle="{StaticResource HeaderStyle}"
                            HeaderTemplate="{StaticResource GroupTemplate}" />
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding Path=Name}"
                            HeaderContainerStyle="{StaticResource HeaderStyle}"
                            HeaderTemplate="{StaticResource Templ}" />
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding Path=Path}"
                            HeaderContainerStyle="{StaticResource HeaderStyle}"
                            HeaderTemplate="{StaticResource pathTemplate}" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>

</Window>
