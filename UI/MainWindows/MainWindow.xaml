<Window
    x:Class="UI.MainWindows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:UI"
    xmlns:mainwindows="clr-namespace:UI.MainWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Launche - Your IDE Launcher"
    Width="650"
    Height="550"
    MaxWidth="750"
    d:DataContext="{d:DesignInstance Type=mainwindows:MainWindowViewModel}"
    Loaded="Window_Loaded"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid Margin="5,2,5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="33" />
            <RowDefinition Height="23" />
            <RowDefinition Height="28" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="28" />
            <RowDefinition Height="28" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu VerticalAlignment="Center">
            <MenuItem
                Name="MenuItemManageProjects"
                Padding="6,4,6,6"
                Command="{Binding OpenProjectsWindowCommand}"
                Header="Add Project" />
            <MenuItem
                Padding="6,4,6,6"
                Command="{Binding OpenDevAppsWindowCommand}"
                Header="_Manage Dev Apps" />
        </Menu>
        <Grid
            Grid.Row="1"
            Height="26"
            VerticalAlignment="Center"
            Background="#404040">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Dev App"
                Foreground="White" />
        </Grid>
        <ComboBox
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Height="20"
            Margin="0,0,0,0"
            Padding="1,0,0,0"
            VerticalContentAlignment="Center"
            DisplayMemberPath="Name"
            IsEditable="True"
            IsTextSearchEnabled="True"
            ItemsSource="{Binding DevApps}"
            PreviewTextInput="ComboBox_PreviewTextInput"
            SelectedItem="{Binding SelectedDevApp, UpdateSourceTrigger=PropertyChanged}"
            StaysOpenOnEdit="True" />
        <Grid
            Grid.Row="3"
            Margin="0,2,0,0"
            Background="#404040">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label
                HorizontalAlignment="Left"
                Content="Project Path"
                Foreground="White" />
        </Grid>
        <Grid Grid.Row="4" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    Content="Name"
                    ForceCursor="True" />
                <TextBox
                    Grid.Row="1"
                    Height="20"
                    Margin="0,0,5,0"
                    IsReadOnly="True"
                    IsReadOnlyCaretVisible="True"
                    Text="{Binding Project.Name}"
                    TextWrapping="NoWrap" />
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    Content="File Name" />
                <TextBox
                    Grid.Row="1"
                    Height="20"
                    Margin="0,0,0,0"
                    IsReadOnly="True"
                    IsReadOnlyCaretVisible="True"
                    Text="{Binding Project.Filename}"
                    TextWrapping="NoWrap" />
            </Grid>

        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="121*" />
                <ColumnDefinition Width="39*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                Content="Path"
                ForceCursor="True" />
            <TextBox
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Height="20"
                IsReadOnly="True"
                IsReadOnlyCaretVisible="True"
                Text="{Binding Project.Path}"
                TextWrapping="NoWrap" />
        </Grid>

        <Label Grid.Row="6" Content="{Binding Project.CurrentGitBranch}" />

        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="107" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Padding="5,0"
                VerticalAlignment="Center"
                Content="Search:"
                ForceCursor="True" />
            <TextBox
                x:Name="txtSearch"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="NoWrap">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchEnterCommand}" />
                    <KeyBinding Key="Down" Command="{Binding SearchDownCommand}" />
                </TextBox.InputBindings>
            </TextBox>
        </Grid>
        <ListView
            x:Name="lvProjectPaths"
            Grid.Row="8"
            Margin="0,0,0,5"
            ItemsSource="{Binding Projects, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding SelectedProject}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding ListItemClickCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListView.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding ListItemClickCommand}" />
            </ListView.InputBindings>
            <ListView.Resources>
                <DataTemplate x:Key="Templ">
                    <TextBlock HorizontalAlignment="Left" Text="Name" />
                </DataTemplate>
                <DataTemplate x:Key="pathTemplate">
                    <TextBlock HorizontalAlignment="Left" Text="Path" />
                </DataTemplate>
                <DataTemplate x:Key="GroupTemplate">
                    <TextBlock HorizontalAlignment="Left" Text="Group" />
                </DataTemplate>
                <Style x:Key="HeaderStyle" TargetType="GridViewColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="Padding" Value="5,2,2,2" />
                </Style>
                <ContextMenu x:Key="ItemContextMenu">
                    <MenuItem
                        x:Name="mnuEdit"
                        Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        Header="Edit" />
                    <MenuItem
                        x:Name="mnuMoveUp"
                        Command="{Binding DataContext.MoveUpCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        Header="Move up"
                        IsEnabled="{Binding EnableMoveUp}" />
                    <MenuItem
                        x:Name="mnuMoveDown"
                        Command="{Binding DataContext.MoveDownCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        Header="Move down"
                        IsEnabled="{Binding EnableMoveDown}" />
                    <MenuItem
                        x:Name="MnuOpenFolderWindow"
                        Command="{Binding DataContext.OpenFolderWindowCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        Header="Open Folder Window" />
                </ContextMenu>
                <ToolTip x:Key="ItemToolTip">
                    <Label Content="Double click to lunch your IDE" />
                </ToolTip>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="ToolTip" Value="{StaticResource ItemToolTip}" />
                    <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView AllowsColumnReorder="true">
                    <GridView.Columns>
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding Path=Index}"
                            Header="#" />
                        <GridViewColumn
                            Width="0"
                            DisplayMemberBinding="{Binding Path=GroupName}"
                            HeaderContainerStyle="{StaticResource HeaderStyle}"
                            HeaderTemplate="{StaticResource GroupTemplate}" />
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding Path=FullName}"
                            HeaderContainerStyle="{StaticResource HeaderStyle}"
                            HeaderTemplate="{StaticResource Templ}" />
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding Path=Path}"
                            HeaderContainerStyle="{StaticResource HeaderStyle}"
                            HeaderTemplate="{StaticResource pathTemplate}" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
